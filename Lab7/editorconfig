root = true

[*.{cs,vb}]
# Общее правило: все открывающие скобки на новой строке
csharp_new_line_before_open_brace = all

# НО: Исключения — где скобка ДОЛЖНА быть на той же строке
csharp_new_line_before_open_brace_for_types = none
csharp_new_line_before_open_brace_for_methods = none
csharp_new_line_before_open_brace_for_properties = none
csharp_new_line_before_open_brace_for_accessors = none
csharp_new_line_before_open_brace_for_anonymous_methods = none
csharp_new_line_before_open_brace_for_anonymous_types = none
csharp_new_line_before_open_brace_for_control_blocks = none
csharp_new_line_before_open_brace_for_lambda_expression_body = none
csharp_new_line_before_open_brace_for_object_initializers = none

# Подавляем шумные null-анализаторы
dotnet_diagnostic.CS8600.severity = silent
dotnet_diagnostic.CS8603.severity = silent
